<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.mojefilmy.controllers.CategoryController">
   <children>
      <HBox alignment="TOP_CENTER" spacing="20.0">
         <children>
            <Label text="%option.movieTittle" />
            <TextField fx:id="categoryTextField" />
            <Button fx:id="addCategoryButton" mnemonicParsing="false" onAction="#addCategoryOnAction" text="%option.addBtn" />
            <Label text="%option.chooseMovie" />
            <ComboBox fx:id="categoryComboBox" onAction="#onActionComboBox" prefWidth="150.0" />
            <Button fx:id="deleteCategoryButton" layoutX="648.0" layoutY="20.0" mnemonicParsing="false" onAction="#onActionDeleteButton" text="%option.deleteBtn" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
